@model IEnumerable<AppUser>

@{
    ViewBag.Title = "List of Users";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-6 my-4">
        <h4>Rubbles Tecnologies Inc,<br>
            Internal Staff Data
        </h4>
        @if(Model.Any())
        {
            <a asp-action="Register" asp-controller="Account" style="text-decoration:none">
                Click here to add an Employee
            </a>
            foreach(AppUser user in Model)
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h6>Staff Id: @user.Id</h6>
                    </div>
                    <div class="card-body">
                        <h5>@user.FirstName @user.LastName</h5>
                    </div>
                    <div class="card-footer">
                        <form asp-action="DeleteUser" asp-controller="Account" asp-route-Id="@user.Id">
                            <a asp-action="EditUser" asp-controller="Account" asp-route-Id="@user.Id" class="btn btn-primary">Edit</a>
                            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete?')">Delete</button>
                        </form>
                    </div>
                </div>

            }
        }
        else
        {
            <div class="card">
                <div class="header">
                    No user created yet
                </div>
                <div class="body">
                    <h5 class="card-title">
                        Click here to add an Employee
                    </h5>
                </div>
                <div class="card-footer">
                    <a asp-action="Register" asp-controller="Account" class="btn btn-primary" style="width:auto">Create User</a>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4"></div>
</div>